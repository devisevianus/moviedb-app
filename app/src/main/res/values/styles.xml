<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius50" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CollapsingToolbar.Title.Expanded" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="MyTextStyleLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextStyleDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/purple_200</item>
    </style>

</resources>